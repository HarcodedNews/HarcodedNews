<h1>Bienvenido {{username}}.</h1>

<section>
    <p>Usuario: {{username}}</p>
    {{#if photo}}
    <img class="userimage" src="{{photo}}" alt="{{username}}">
    <p> <small>Si quieres cambiar tu imagen de perfil, haz click aquí:</small></p>
    {{else}}
    <p>Puedes añadir imagen aqui</p>
    {{/if}}
    <form action="/profile/add-image" method="POST" enctype="multipart/form-data">
        <input type="file" name="photoupload"><br>
        <input class="btn btn-outline-dark btn-sm my-2" type="submit" value="Save"><br>
    </form>
    <br>
    <div class="container">
        <h2>Estas son tus noticias favoritas</h2>
        <div class="row">

            {{>newsCardProfile this}}

        </div>
    </div>
    <script src='https://unpkg.com/axios/dist/axios.min.js'></script>
    <script src="/javascripts/profile-favs.js"></script>
</section>
