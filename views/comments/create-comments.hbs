<div class="create-comment-view flexer">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-md-6">
                <div style="text-align: center;">

                    <img src="{{image}}" class="img-comments" alt="News image">
                    </figure>

                    <h1 class="titleNew">{{title}}</h1>

                    <h5 class='description'>{{description}}</h5>

                    <img class="img-comments image" href="{{url}}">

                    <div>
                        <a class="link" href="{{url}}">Go to the new</a><br>
                    </div>
                    <br>
                </div>

                <div class="container">
                    <div class="row">
                        <div class="col-md-8">
                            <form id="commentFrom">
                                <div>
                                    <label for="the-comment-input"> Comment: </label>
                                    <input id="commentInfo" dataid="{{id}}" type="text" name="comment" class="the-name">
                                </div>
                                <button class="btn btn-outline-dark btn-sm my-2"> Comment </button>
                            </form>
                        </div>
                        <div class="col-md-4">
                            <a class="fav-image" {{#if favorite}} favorite {{/if}} id="{{idNew}}">
                                <div class="fav-link">
                                    <figure><img class=" icon" src="../../images/filled_star.png" alt="add-fav">
                                    </figure>
                                </div>
                                <div class="quit-fav-link">
                                    <figure><img class="icon" src="../../images/empty-star.png" alt="quit-fav"></figure>
                                </div>
                            </a>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-md-5">
                <h3>Comments</h3>
                {{#if comments.[0]}}
                {{#each comments}}
                {{>comment this}}
                {{/each}}
                {{else}}
                <h6>Be the first comment!!</h6>
                {{/if}}
            </div>

        </div>
    </div>
</div>


<script src="/javascripts/favorite.js"></script>
<script src="/javascripts/main-page.js"></script>
<script src="/javascripts/add-news.js"></script>
<script src="/javascripts/comments.js"></script>