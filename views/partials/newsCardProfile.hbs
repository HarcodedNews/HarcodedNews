{{#each favNews}}
<div class="col-md-6">
    <img class="cards-profile" src="{{this.image}}" alt="{{this.title}}">
    <h4>{{this.title}}</h4>
    <p>{{this.description}}</p>

    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-8">
                <a href="/comments/create-comments/{{id}}">Create your comment</a>
            </div>
            <div class="col-md-4">
                <a class="fav-image" favorite id="{{idNew}}">
                    <div class="fav-link">
                        <figure><img class="icon icon-styles" src="../../images/filled_star.png" alt="add-fav">
                        </figure>
                    </div>
                </a>
                <hr>
            </div>
        </div>
    </div>
</div>
{{/each}}