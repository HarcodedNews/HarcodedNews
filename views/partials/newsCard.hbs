<div class="col-md-4">


    <div class="newsCard">
        <div class="container fixed">
            <a href="{{url}}">
                <figure><img class="image" {{#if image}} src="{{image}}" {{else}} src="./images/default-image.png"
                        {{/if}} alt="News image"></figure>
            </a>
            <h4 class="titleNew">{{title}}</h4>
            <p class="description">{{description}}</p>

            <div class="row flex-nowrap">
                <div class="col-md-8">
                    <a class="link" href="{{url}}">Read the new</a>
                    <a href="/comments/create-comments/{{id}}" class="createComment col-md-12">Comment</a>
                </div>
                <div class="col-md-4">
                    <a class="fav-image" {{#if favorite}} favorite {{/if}} id="{{id}}">
                        <div class="fav-link">
                            <figure><img class=" icon icon-styles" src="../../images/filled_star.png" alt="add-fav">
                            </figure>
                        </div>
                        <div class="quit-fav-link">
                            <figure><img class="icon icon-styles" src="../../images/empty-star.png" alt="quit-fav">
                            </figure>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <br>
    </div>

</div>